@require "config"
@require "helpers"

/* This stylesheet is automatically generated using Stylus.  See the
   original source at <http://code.s.zeid.me/site-design/src/master/styles/site.styl>. */

@require "base"

body
 background: $background

main
 > article
  nav.subpage
   margin-top: 0.5em;
   ul
    display: table;
    margin: 0;
    padding-left: 0;
    > li
     display: table-row-group;
     list-style: none;
     > a, > span, > p
      display: table-row;
      > a, > span
       display: table-cell;
       vertical-align: middle;
       &:hover + span > a
        text-decoration: underline;
     > a, > span
      line-height: 2em;
      font-weight: bold;
      img
       margin-right: 0.5em;
     &:not(:last-child) > p
      > span
       padding-bottom: 0.5em;

header > nav, main > article nav.subpage
 ul > li
  > a, > span
   img
    for type in min max
     for dim in width height
      {type}-{dim}: 16px;
   .material-icons
    position: relative; top: 0.185em; right: 0.05em;
    font-size: 18px;
    color: $text;
    opacity: 0.8;
   @media (min-resolution: 160dpi),
          handheld, (max-width: 480px), (max-device-width: 480px)
    img
     for type in min max
      for dim in width height
       {type}-{dim}: 22px;
    .material-icons
     font-size: 24px;

header > nav
 ul > li
  > a, > span
   .material-icons
    left: 0.325em;
    margin-right: 0.1em;
    color: inherit;
    opacity: 0.85;

body > main + hr
 if $sheet-metaphor
  display: none;
 else
  display: block;
  flex: 1 0 0%;
  border-style: none;
  height: 0;
  margin: 0;
  &:before, &:after
   content: "";
   display: none;
